{
  "name": "@teitei-tk/juiz",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "ssh://git@github.com/teitei-tk/juiz.git",
  "author": "teitei-tk <teitei.tk@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "packages/*",
    "packages/@juiz/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint 'packages/**/*'",
    "publish": "monorepo-utils-publish",
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:packages",
    "test": "yarn build && yarn test:packages",
    "build:packages": "lerna run build",
    "test:packages": "lerna run test",
    "deploy:production": "yarn test && yarn build && yarn run publish"
  },
  "devDependencies": {
    "@monorepo-utils/publish": "^2.0.1",
    "@types/node": "^11.11.1",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-xss": "^0.1.9",
    "husky": "^1.3.1",
    "lerna": "^3.0.4",
    "lint-staged": "^8.1.5",
    "prettier": "^1.14.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint --fix",
      "git add"
    ]
  }
}
